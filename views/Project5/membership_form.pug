extends layout

block content
  if user
    h1= title

    form(method='POST' action='' className='signupForm')
      p #{user.userName}
      div.form-group
        label(for='membershipPassword') Membership Password:
        input#membershipPassword.form-control(type='password', placeholder= 'Password', name='membershipPassword', value='')
      button.btn.btn-primary(type='submit') Submit:
  
    if errors
      ul
        for error in errors
          li!= error.msg
  else
    p You need to be logged in to access this page