doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    link(rel='stylesheet', href='/stylesheets/project5/style.css')
  body
    nav.navbar.navbar-light(class="navbar-right")
      a(href="/" class="navbar-brand" style="color: blue; margin-left: auto;") HomeHome
    if user
      .ul(class="nav justify-content-end" )
        .li(class="nav-item" style="margin: 5px;")
          a(href="/fifthProject") Home
        .li(class="nav-item" style="margin: 5px;")
          a(href="/fifthProject/logout") Log Out
        if (user.membershipStatus === false)
          .li(class="nav-item" style="margin: 5px;")
            a(href="/fifthProject/membership") Claim Membership
        if (user.adminStatus === false)
          .li(class="nav-item" style="margin: 5px;")
            a(href="/fifthProject/admin") Admin Authentication
    else
      .ul(class="nav justify-content-end" )
        .li(class="nav-item" style="margin: 5px;")
          a(href="/fifthProject") Home
        .li(class="nav-item" style="margin: 5px;")
          a(href="/fifthProject/login") Login
        .li(class="nav-item" style="margin: 5px;")
          a(href="/fifthProject/signup") Signup
    block content
