extends layout

block content
  h1= title

  form(method='POST' action='' className='signupForm')
    div.form-group
      label(for='firstName') First Name: <br />
      input#firstName.form-control(type='text', placeholder='First Name', name='firstName', value=(undefined===user ? '' : user.firstName))
    div.form-group
      label(for='lastName') Last Name: <br />
      input#lastName.form-control(type='text', placeholder='Last Name', name='lastName', value=(undefined===user ? '' : user.lastName))
    div.form-group
      label(for='userName') Username: <br />
      input#userName.form-control(type='text', placeholder='Username', name='userName', value=(undefined===user ? '' : user.userName))
    div.form-group
      label(for='password') Password: <br />
      input#password.form-control(type='password', placeholder='Password', name='password', value='')
    div.form-group
      label(for='confirmPassword') Confirm Password: <br />
      input#confirmPassword.form-control(type='password', placeholder='Confirm Password', name='confirmPassword', value='')
    button.btn.btn-primary(type='submit') Submit    

  if errors
    ul
      for error in errors
        li!= error.msg || errors[0]