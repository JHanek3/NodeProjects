extends layout

block content
  if user
    h1= title

    form(method='POST' action='' className='signupForm')
      div.form-group
        p #{user.userName}
      div.form-group
        label(for='adminPassword') Admin Password:
        input#adminPassword.form-control(type='password', placeholder= 'Admin Password', name='adminPassword', value='')
      button.btn.btn-primary(type='submit') Submit:
  
    if errors
      ul
        for error in errors
          li!= error.msg
  else
    p You need to be logged in to access this page