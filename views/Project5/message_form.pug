extends layout

block content
  h1= title
  if user
    form(method='POST' action='' className='signupForm')
      div.form-group
        label(for='title') Message Title: <br />
        input#title.form-control(type='text', placeholder='Title', name='title', value=(undefined===msg ? '' : msg.title))
      div.form-group
        label(for='text') Message Body: <br />
        input#text.form-control(type='text', placeholder='Message', name='text', value=(undefined===msg ? '' : msg.text))
      button.btn.btn-primary(type='submit') Submit    
    if errors
      ul
        for error in errors
          li!= error.msg
  else
    a(href='/login')